<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.helios.cctv.mapper.RegionMapper">
    <!-- 1. resultMap 정의 -->
    <resultMap id="RegionMap" type="com.helios.cctv.dto.region.RegionDTO">
        <result property="polygon" column="polygon" typeHandler="com.helios.cctv.config.GeometryTypeHandler"/>
    </resultMap>
    <!-- 2. resultMap 사용 -->
    <select id="getRegions" resultMap="RegionMap">
        SELECT
            id,
            adm_sect_c,
            sgg_nm,
            sgg_oid,
            col_adm_se,
            ST_AsBinary(polygon) AS polygon,
            created_at,
            updated_at
        FROM regions;
    </select>

    <!-- cctv point에 해당하는 폴리곤 찾기 -->
    <select id="findRegionIdByPoint" resultType="int">
        SELECT id
        FROM regions
        WHERE ST_Contains(polygon, ST_GeomFromText(#{wkt}, 5186))
            LIMIT 1
    </select>

</mapper>
